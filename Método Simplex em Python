qtdVariaveis = int(input("Digite a quantidade de variáveis da função objetivo: "))
print("Vamos formar a matriz com a seguinte configuração (Exemplo 3 variaveis):\n")
print("            z | x1 | x2 | x3 | f1 | f2 | f3 | L.D | Quociente\n"
 "linha  z|   -    -    -    -    -    -    -    -      -\n"
 "linha x1|   -    -    -    -    -    -    -    -      -\n"
 "linha x2|   -    -    -    -    -    -    -    -      -\n"
 "linha x3|   -    -    -    -    -    -    -    -      -\n")


contador = 1
nmLinhas = qtdVariaveis + 1
nmColunas = (qtdVariaveis * 2) + 3

print("\n")


"""for contador in range(qtdVariaveis):
    print(Coeficientes_de_X[contador] + "X1\n")"""
    

matriz_simplex = [[0] * nmColunas for _ in range(nmLinhas) ]





for i in range(nmLinhas) :
    for j in range(nmColunas):
         
       matriz_simplex[i][j] = input("Insira o valor do elemento " + str(i) +","+ str(j) + ": ")



for i in matriz_simplex:
    
    # Itera pelos elementos em cada linha
    
    for j in i:
        print(j, end=' ')  # Usamos end=' ' para imprimir na mesma linha
    print()  
    
    
    
    

